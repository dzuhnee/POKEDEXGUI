<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pokedex.app.TeachMoveController">
   <children>
      <!-- Background Image -->
      <ImageView fitHeight="400.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="false">
         <image>
            <Image url="@teachmovebg.jpg" />
         </image>
      </ImageView>

      <!-- Trainer Label -->
      <Label fx:id="trainerLabel" layoutX="234.0" layoutY="85.0" style="-fx-font-size: 16px; -fx-text-fill: white;" text="Trainer: " />

      <!-- Pokémon Selector -->
      <Label layoutX="133.0" layoutY="126.0" text="Select Pokémon:" />
      <ComboBox fx:id="pokemonComboBox" layoutX="288.0" layoutY="122.0" prefWidth="200.0" />

      <!-- Move Selector -->
      <Label layoutX="134.0" layoutY="167.0" text="Select Move:" />
      <ComboBox fx:id="moveComboBox" layoutX="288.0" layoutY="163.0" prefWidth="200.0" />

      <!-- Forget Move -->
      <Label layoutX="133.0" layoutY="206.0" text="Forget Move:" />
      <ComboBox fx:id="forgetMoveComboBox" layoutX="288.0" layoutY="202.0" prefWidth="200.0" />

      <Button fx:id="forgetButton" layoutX="402.0" layoutY="238.0" mnemonicParsing="false" text="Forget Move" />

      <!-- Teach Button -->
      <Button fx:id="teachButton" layoutX="227.0" layoutY="251.0" mnemonicParsing="false" style="-fx-background-color: transparent;">
         <graphic>
            <ImageView fitHeight="30.0" fitWidth="106.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@teachMove.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>

      <!-- Back Button -->
      <Button fx:id="backButton" layoutX="233.0" layoutY="283.0" mnemonicParsing="false" onAction="#handleBack" style="-fx-background-color: transparent;">
         <graphic>
            <ImageView fitHeight="94.0" fitWidth="137.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@back.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
   </children>
</AnchorPane>
