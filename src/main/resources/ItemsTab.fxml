<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>

<StackPane prefHeight="414.0" prefWidth="623.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pokedex.app.ItemsTabController">
   <children>
      <Group>
         <children>
            <ImageView fitHeight="448.0" fitWidth="673.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@itemsbg.jpg" />
               </image>
            </ImageView>

            <Button fx:id="addBtn" contentDisplay="GRAPHIC_ONLY" layoutX="92.0" layoutY="144.0" mnemonicParsing="false" style="-fx-padding: 0; -fx-background-color: transparent;">
               <graphic>
                  <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@list.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>

            <Button fx:id="viewBtn" contentDisplay="GRAPHIC_ONLY" layoutX="259.0" layoutY="145.0" mnemonicParsing="false" style="-fx-padding: 0; -fx-background-color: transparent;">
               <graphic>
                  <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@view.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>

            <Button fx:id="searchBtn" contentDisplay="GRAPHIC_ONLY" layoutX="434.0" layoutY="144.0" mnemonicParsing="false" style="-fx-padding: 0; -fx-background-color: transparent;">
               <graphic>
                  <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@search.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>

            <!-- âœ… Back Button with handler -->
            <Button fx:id="backBtn" contentDisplay="GRAPHIC_ONLY" layoutX="4.0" layoutY="318.0" mnemonicParsing="false" onAction="#handleBack" prefHeight="103.0" prefWidth="182.0" style="-fx-padding: 0; -fx-background-color: transparent;">
               <graphic>
                  <ImageView fitHeight="124.0" fitWidth="225.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@back.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </Group>
   </children>
</StackPane>
