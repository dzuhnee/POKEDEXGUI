<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>

<StackPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pokedex.app.ViewMovesController">
   <children>
      <!-- Background Image -->
      <Group>
         <children>
            <ImageView fitHeight="404.0" fitWidth="602.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@viewmovesbg.jpg" />
               </image>
            </ImageView>
         </children>
      </Group>

      <!-- Content Overlay -->
      <AnchorPane prefHeight="400.0" prefWidth="600.0">

            <!-- TableView -->
            <TableView fx:id="movesTable" layoutX="12.0" layoutY="74.0" prefHeight="250.0" prefWidth="579.0">
               <columns>
                  <TableColumn fx:id="nameColumn" text="Move Name" />
                  <TableColumn fx:id="descriptionColumn" prefWidth="230.0" text="Description" />
                  <TableColumn fx:id="type1Column" prefWidth="65.0" text="Type 1" />
                  <TableColumn fx:id="type2Column" prefWidth="65.0" text="Type 2" />
                  <TableColumn fx:id="classificationColumn" prefWidth="140.0" text="Classification" />
               </columns>
            </TableView>

            <!-- Buttons -->
            <Button fx:id="backButton" layoutX="280.0" layoutY="330.0" mnemonicParsing="false" onAction="#handleBackButton" text="Back" />

      </AnchorPane>
   </children>
</StackPane>
